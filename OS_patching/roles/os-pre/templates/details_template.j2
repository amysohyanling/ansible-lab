<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>System Information</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        h1 {
            color: #333;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        th, td {
            padding: 10px;
            border: 1px solid #ccc;
            text-align: left;
        }
        th {
            background-color: #f4f4f4;
        }
    </style>
</head>
<body>
    <h1>System Information</h1>
    <table>
        <tr>
            <th>Parameter</th>
            <th>Value</th>
        </tr>
        <tr>
            <td>Hostname</td>
            <td>{{ ansible_facts['hostname'] }}</td>
        </tr>
        <tr>
            <td>OS Version</td>
            <td>{{ ansible_facts['distribution'] }} {{ ansible_facts['distribution_version'] }}</td>
        </tr>
        <tr>
            <td>IP Address</td>
            <td>{{ ansible_facts['default_ipv4']['address'] }}</td>
        </tr>
        <tr>
            <td>Total Up time</td>
            <td>{{ ansible_facts['uptime_seconds'] }}</td>
        </tr>
        <tr>
            <td>Kernel Version</td>
            <td>{{ ansible_facts['kernel'] }}</td>
        </tr>
        <tr>
            <td>Memory</td>
            <td>{{ ansible_facts['memory_mb']['real']['total'] }}</td>
        </tr>
        <tr>
            <td>Service State</td>
            <td>{{ service_name }} is currently {{ service_state }}</td>
        </tr>
        <tr>
            <td>/etc/hosts file</td>
            <td>{{ hosts_file_jinja }}</td>
        </tr>
        <tr>
            <td>/etc/resolv.conf file</td>
            <td>{{ resolv_conf_file }}</td>
        </tr>
        <tr>
            <td>Mount Point</td>
            <td>{{ mount_point_file }}</td>
        </tr>
    </table>

{% set pre_packages_upgrade = pre_packages_ug | select('search', '^Installed:') | list %}
{% for item in pre_packages_upgrade %}
    <p>{{ item }}<p/>
{% endfor %}

    <h1>Before & After Patching</h1>
    <table>
        <tr>
            <th>Parameter</th>
            <th>Value</th>
        </tr>
        <tr>
            <td>Before patching packages</td>
            <td>{{ pre_packages_upgrade }}</td>
        </tr>
        <tr>
            <td>After patching packes</td>
            <td>{{ post_packages_ug }}</td>
        </tr>
        <tr>
            <td>IP Address</td>
            <td>{{ ansible_facts['default_ipv4']['address'] }}</td>
        </tr>
        <tr>
            <td>Total Up time</td>
            <td>{{ ansible_facts['uptime_seconds'] }}</td>
        </tr>
        <tr>
            <td>Kernel Version</td>
            <td>{{ ansible_facts['kernel'] }}</td>
        </tr>
        <tr>
            <td>Memory</td>
            <td>{{ ansible_facts['memory_mb']['real']['total'] }}</td>
        </tr>
        <tr>
            <td>Service State</td>
            <td>{{ service_name }} is currently {{ service_state }}</td>
        </tr>
        <tr>
            <td>/etc/hosts file</td>
            <td>{{ hosts_file_jinja }}</td>
        </tr>
        <tr>
            <td>/etc/resolv.conf file</td>
            <td>{{ resolv_conf_file }}</td>
        </tr>
        <tr>
            <td>Mount Point</td>
            <td>{{ mount_point_file }}</td>
        </tr>
    </table>
</body>
</html>
